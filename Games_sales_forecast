      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# Predict future sales beyond 2020\n",
        "future_years = np.arange(2025, 2031)  # Years 2025 to 2030\n",
        "future_predictions = []\n",
        "current_sequence = scaled_data[-seq_length:]  # Start with the last available sequence\n",
        "\n",
        "for year in future_years:\n",
        "    pred = lstm_model.predict(current_sequence.reshape(1, seq_length, 1))\n",
        "    future_predictions.append(pred[0, 0])\n",
        "    current_sequence = np.append(current_sequence[1:], pred, axis=0)\n",
        "\n",
        "future_predictions = scaler.inverse_transform(np.array(future_predictions).reshape(-1, 1))"
      ],
      "metadata": {
