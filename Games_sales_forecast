    {
      "cell_type": "code",
      "source": [
        "# Predict future sales\n",
        "lstm_predictions = lstm_model.predict(x_test)\n",
        "lstm_predictions = scaler.inverse_transform(lstm_predictions)"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
