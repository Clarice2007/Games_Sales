      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "from sklearn.preprocessing import MinMaxScaler\n",
        "from tensorflow.keras.models import Sequential\n",
        "from tensorflow.keras.layers import Dense, LSTM\n",
        "import matplotlib.pyplot as plt\n",
        "import plotly.express as px\n",
        "import plotly.graph_objects as go"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# Load the dataset\n",
        "file_path = \"/content/drive/MyDrive/Dataset /Sales_data.csv\""
      ],
      "metadata": {
        "id": "Crly9peL2CuO"
      },
      "execution_count": 4,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "sales_data = pd.read_csv(file_path)\n"
      ],
      "metadata": {
        "id": "f7WhwE4j2Kpy"
      },
      "execution_count": 5,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Handling missing values for Year_of_Release and Global_Sales\n",
        "sales_data['Year_of_Release'] = sales_data['Year_of_Release'].fillna(sales_data['Year_of_Release'].median())\n",
        "sales_data['Global_Sales'] = sales_data['Global_Sales'].fillna(sales_data['Global_Sales'].median())"
      ],
      "metadata": {
        "id": "UveYU1me2gxb"
      },
      "execution_count": 8,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Aggregate global sales by year\n",
        "sales_by_year = sales_data.groupby('Year_of_Release')['Global_Sales'].sum().reset_index()\n"
      ],
      "metadata": {
        "id": "zCryPwRo2ijD"
      },
      "execution_count": 9,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Create a 'Country_Code' column based on region sales columns\n",
        "sales_data['Country_Code'] = sales_data.apply(lambda row:\n",
        "                                              'NA' if row['NA_Sales'] > 0\n",
        "                                              else ('EU' if row['EU_Sales'] > 0\n",
        "                                                    else ('JP' if row['JP_Sales'] > 0\n",
        "                                                          else 'Other')), axis=1)\n",
        "\n",
        "# Aggregate global sales by year and region\n",
        "sales_by_year_region = sales_data.groupby(['Year_of_Release', 'Country_Code'])[['NA_Sales', 'EU_Sales', 'JP_Sales', 'Other_Sales']].sum().reset_index()\n",
        "print(sales_by_year_region.head())"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "ZUOgko6C7a2l",
        "outputId": "fb19930f-32ba-41d8-9308-eb22b67b583e"
      },
      "execution_count": 10,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "   Year_of_Release Country_Code  NA_Sales  EU_Sales  JP_Sales  Other_Sales\n",
            "0           1980.0           NA     10.59      0.67      0.00         0.12\n",
            "1           1981.0           NA     33.40      1.96      0.00         0.32\n",
            "2           1982.0           NA     26.92      1.65      0.00         0.31\n",
            "3           1983.0           NA      7.76      0.80      8.10         0.14\n",
            "4           1984.0           JP      0.00      0.00      4.76         0.00\n"
          ]
        }
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# Scale the data for LSTM\n",
        "scaler = MinMaxScaler(feature_range=(0, 1))\n",
        "scaled_data = scaler.fit_transform(sales_by_year['Global_Sales'].values.reshape(-1, 1))"
      ],
      "metadata": {
        "id": "PJp8PrYa2mSR"
      },
      "execution_count": 7,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Prepare the data for LSTM\n",
        "def create_sequences(data, seq_length):\n",
        "    x, y = [], []\n",
        "    for i in range(len(data) - seq_length):\n",
        "        x.append(data[i:i + seq_length])\n",
        "        y.append(data[i + seq_length])\n",
        "    return np.array(x), np.array(y)\n",
        "\n",
        "seq_length = 3  # Sequence length for LSTM\n",
        "x, y = create_sequences(scaled_data, seq_length)\n"
      ],
      "metadata": {
        "id": "4DPJRIeL2sw1"
      },
      "execution_count": 8,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Split the data into training and testing sets\n",
        "train_size = int(len(x) * 0.8)\n",
        "x_train, y_train = x[:train_size], y[:train_size]\n",
        "x_test, y_test = x[train_size:], y[train_size:]\n"
      ],
      "metadata": {
        "id": "RSi7w4Qx2u6y"
      },
      "execution_count": 9,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Reshape the data for LSTM [samples, time steps, features]\n",
        "x_train = np.reshape(x_train, (x_train.shape[0], x_train.shape[1], 1))\n",
        "x_test = np.reshape(x_test, (x_test.shape[0], x_test.shape[1], 1))\n"
      ],
      "metadata": {
        "id": "TWyDujeF20Cq"
      },
      "execution_count": 10,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Build the LSTM model\n",
        "lstm_model = Sequential()\n",
        "lstm_model.add(LSTM(units=50, return_sequences=True, input_shape=(x_train.shape[1], 1)))\n",
        "lstm_model.add(LSTM(units=50, return_sequences=False))\n",
        "lstm_model.add(Dense(units=25))\n",
        "lstm_model.add(Dense(units=1))"
      ],
      "metadata": {
        "id": "jZOw3qix23yZ"
      },
      "execution_count": 11,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Compile the model\n",
        "lstm_model.compile(optimizer='adam', loss='mean_squared_error')\n"
      ],
      "metadata": {
        "id": "cXg8mg95290j"
      },
      "execution_count": 12,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Train the LSTM model\n",
        "lstm_model.fit(x_train, y_train, epochs=20, batch_size=1, verbose=1)"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
