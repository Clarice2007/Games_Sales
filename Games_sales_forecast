        "for code, data in region_mapping.items():\n",
        "    total_sales = sales_data[data['sales_column']].sum()\n",
        "    temp_df = pd.DataFrame({\n",
        "        'lat': [data['lat']],\n",
        "        'lon': [data['lon']],\n",
        "        'sales': [total_sales],\n",
        "        'region': [data['region']]\n",
        "    })\n",
        "    region_sales = pd.concat([region_sales, temp_df], ignore_index=True)"
